	uint8 Local_u8ChannelReading = 0;
	uint8 Local_u8Temp = 0;

	/*Super Loop*/
	while(1)
	{
		Local_u8ChannelReading = ADC_u16GetChannelReading(ADC_u8SINGLE_ENDED_CH7);
		CLCD_voidClearDisplay();
		CLCD_u8GoToXY(0 , 0);
		CLCD_voidSendDecimalNumber(Local_u8ChannelReading);
//		Local_u8Temp = (uint8) (((uint32) Local_u8ChannelReading * 500UL) / 256UL);
//
//		DIO_u8SetPortValue(DIO_u8PORTC, Local_u8ChannelReading);
//		CLCD_voidClearDisplay();
//		CLCD_u8GoToXY(0, 0);
//		CLCD_u8SendString("Temp: ");
//		CLCD_voidSendDecimalNumber(Local_u8Temp);
//		_delay_ms(1000);
	}
}




