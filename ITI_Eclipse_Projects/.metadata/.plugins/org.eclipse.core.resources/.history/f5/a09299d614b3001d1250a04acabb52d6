#include "STD_TYPES.h"

#include "DIO_interface.h"

#include <util/delay.h>



void main(void)
{
	/*pin0 output*/
	DIO_u8SetPinDirection(DIO_u8PORTA, DIO_u8PIN0, DIO_u8PIN_OUTPUT);

	/*pin1 input*/
	DIO_u8SetPinDirection(DIO_u8PORTA, DIO_u8PIN1, DIO_u8PIN_INPUT);

	/*pull up resistor for pin1*/
	DIO_u8SetPinValue(DIO_u8PORTA, DIO_u8PIN1, DIO_u8PIN_HIGH);

	uint8 value = DIO_u8PIN_LOW;

	while(1)
	{
		DIO_u8GetPinValue(DIO_u8PORTA, DIO_u8PIN1, &value);

		if(value == DIO_u8PIN_HIGH)
		{
			DIO_u8SetPinValue(DIO_u8PORTA, DIO_u8PIN0, DIO_u8PIN_HIGH);
		}
		else
		{
			DIO_u8SetPinValue(DIO_u8PORTA, DIO_u8PIN0, DIO_u8PIN_LOW);
		}
//		DIO_u8TogglePinValue(DIO_u8PORTA, DIO_u8PIN0);
//		_delay_ms(500);
//		DIO_u8TogglePinValue(DIO_u8PORTA, DIO_u8PIN0);
//		_delay_ms(500);
	}
}
