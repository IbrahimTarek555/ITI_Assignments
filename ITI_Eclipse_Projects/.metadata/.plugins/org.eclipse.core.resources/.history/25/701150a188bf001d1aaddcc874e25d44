#include "STD_TYPES.h"
#include "SpecialCharacters.h"

#include "DIO_interface.h"
#include "PORT_interface.h"

#include "CLCD_interface.h"
#include "KEYPAD_interface.h"

#include <util/delay.h>

/*
 * In this calculator project: use only 2 numbers after digits, and only 3 numbers for each number.
 */

/*
 * This Application is not going well with multiplying two fraction numbers.
 */

void main(void)
{
	/*Define Variables*/
	uint8 Local_u8Array[8] = {'S', 'A', 'P', 'O', 'N', 'B', 'C', 'D'};
	uint8 Local_u8ResultArray[8] = {0};
	uint8 Local_u8Counter1;
	uint8 Local_u8Counter2;
	uint8 Local_u8BiggerElement;
	sint8 Local_s8BiggerElementIndex = -1;
	uint8 Local_u8TempSwap;
	uint8 Local_u8Counter3;

	/*Port Initialization*/
	PORT_voidInit();

	/*Initialize the lcd*/
	CLCD_voidInit();

		for(Local_u8Counter1 = 0; Local_u8Counter1 < 8; Local_u8Counter1++)
		{
			Local_u8BiggerElement = Local_u8Array[Local_u8Counter1];

			for(Local_u8Counter2 = Local_u8Counter1 + 1; Local_u8Counter2 < 8; Local_u8Counter2++)
			{
				if(Local_u8Array[Local_u8Counter2] > Local_u8BiggerElement)
				{
					Local_u8BiggerElement = Local_u8Array[Local_u8Counter2];
					Local_s8BiggerElementIndex = Local_u8Counter2;
				}
			}

			if(Local_s8BiggerElementIndex != -1)
			{
				Local_u8TempSwap = Local_u8Array[Local_s8BiggerElementIndex];
				Local_u8Array[Local_s8BiggerElementIndex] = Local_u8Array[Local_u8Counter1];
				Local_u8Array[Local_u8Counter1] = Local_u8TempSwap;
			}

			Local_s8BiggerElementIndex = -1;
		}

		Local_u8Counter3 = 15;

	while(1)
	{

		for(Local_u8Counter1 = 0; Local_u8Counter1 < 5; Local_u8Counter1++)
		{
			CLCD_u8GoToXY(Local_u8Counter2, 1);
			CLCD_voidSendData(Local_u8Array[Local_u8Counter1]);
			Local_u8Counter2--;
			_delay_ms(500);
		}
		_delay_ms(1000);
		CLCD_voidClearDisplay();
		Local_u8Counter3--;
		Local_u8Counter2 = Local_u8Counter3;
		if(Local_u8Counter3 == 0)
		{
			Local_u8Counter3 = 15;
		}
	}

}
