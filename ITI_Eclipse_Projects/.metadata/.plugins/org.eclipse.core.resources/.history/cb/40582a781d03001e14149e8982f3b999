/**
 * @file USART_config.h
 * @author Ibrahim Tarek
 * @brief This file configures the USART module in prebuild configuration method.
 * @version 1.00
 */

#ifndef USART_CONFIG_H_
#define USART_CONFIG_H_



/**
 * @details Configure the USART character size, Options: 1- 5_BITS_CHAR_SIZE
 * 														 2- 6_BITS_CHAR_SIZE
 * 														 3- 7_BITS_CHAR_SIZE
 * 														 4- 8_BITS_CHAR_SIZE
 * 														 5- 9_BITS_CHAR_SIZE
 */
#define USART_u8CharacterSize			8_BITS_CHAR_SIZE

#endif
