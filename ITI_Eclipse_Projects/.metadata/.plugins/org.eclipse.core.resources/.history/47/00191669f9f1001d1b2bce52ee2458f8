#include "STD_TYPES.h"

#include "DIO_interface.h"
#include "PORT_interface.h"
#include "TIMER_interface.h"
#include "GIE_interface.h"

#include <util/delay.h>

void MAIN_voidLedAss(void);

/*It is the main*/
void main(void)
{
	/*Peripherals Initialization*/
	PORT_voidInit();
	GIE_voidEnable();

	TIMER_voidInit();
	TIMER_u8SetCallBackCompareMatch(MAIN_voidLedAss);

	/*Super Loop*/
	while(1)
	{

	}
}

void MAIN_voidLedAss(void)
{
	/*Define the Counter*/
	static uint16 Local_u16Counter = 0;

	Local_u16Counter++;
	if(Local_u16Counter == 4000)
	{
		Local_u16Counter = 0;
		DIO_u8TogglePinValue(DIO_u8PORTA, DIO_u8PIN7);
	}

}
