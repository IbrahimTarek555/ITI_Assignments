#include "STD_TYPES.h"
#include "SpecialCharacters.h"

#include "DIO_interface.h"
#include "PORT_interface.h"
#include "EXTI_interface.h"
#include "GIE_interface.h"
#include "ADC_interface.h"

#include "CLCD_interface.h"

#include <util/delay.h>

/*It is the main*/
void main(void)
{
	/*Peripherals Initialization*/
	PORT_voidInit();
//	GIE_voidEnable();
//	EXTI_voidInit();
//	CLCD_voidInit();
	ADC_voidInit();

	/*Define variables*/
	uint8 Local_u8ChannelReading = 0;

	/*Super Loop*/
	while(1)
	{
		Local_u8ChannelReading = ADC_u16GetChannelReading(0);

		DIO_u8SetPortValue(DIO_u8PORTC, Local_u8ChannelReading);

		delay_ms(500);
	}
}
