#ifndef KERNEL_PRIVATE_H_
#define KERNEL_PRIVATE_H_

typedef struct
{
	uint16 Periodicity;
	void (*TaskFunc)(void);
	uint8 PauseState;
}
Task_t;

static void Scheduler(void);

#define PAUSED		0u
#define WORKING		1u
#endif
