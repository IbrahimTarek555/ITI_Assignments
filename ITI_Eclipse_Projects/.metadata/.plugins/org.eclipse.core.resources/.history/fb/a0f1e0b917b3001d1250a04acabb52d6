#ifndef CLCD_CFG_H_
#define CLCD_CFG_H_

/*
 * Please choose which port to connect control pins: RS, RW, E;
 * Options: 1- DIO_u8PORTA
 * 			2- DIO_u8PORTB
 * 			3- DIO_u8PORTC
 * 			4- DIO_u8PORTD
 */
#define CLCD_CTRL_PORT	DIO_u8PORTA

#endif
